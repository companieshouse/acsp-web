{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "layouts/default.njk" %}
{% block main_content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form class="form" action="" method="post">
         {% if businessName %}
          {% include "partials/business_name.njk" %}
        {% endif %}
        {% if firstName %}
          {% include "partials/user_name.njk" %}
        {% endif %}
        <h1 class="govuk-heading-l">{{ i18n.correspondenceAddressConfirmTitle }}</h1>
        <ul class="govuk-list">
          <li>{{ correspondenceAddress.propertyDetails }}</li>
          <li>{{ correspondenceAddress.line1 }}</li>
          <li>{{ correspondenceAddress.line2 }}</li>
          <li>{{ correspondenceAddress.town }}</li>
          <li>{{ correspondenceAddress.county }}</li>
          <li>{{ correspondenceAddress.country }}</li>
          <li>{{ correspondenceAddress.postcode }}</li>
        </ul>
        <p class="govuk-body">
          <a href={{editPage}} class="govuk-link govuk-link--no-visited-state">{{ i18n.EditAddress }}</a>
        </p>
        {{ govukButton({
          text: i18n.ConfirmAndContinue,
          attributes: {
            "data-event-id": "CONFIRM AND CONTINUE - address correspondence confirm"
          }
        }) }}
      </form>
    </div>
  </div>
</div>{% endblock main_content %}