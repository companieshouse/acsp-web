{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "layouts/default.njk" %}
{% set errors = pageProperties.errors %}
{% block main_content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="" method="POST">
        {% if businessName %}
          {% include "partials/business_name.njk" %}
        {% endif %}
        {% if firstName %}
          {% include "partials/user_name.njk" %}
        {% endif %}
        <h1 class="govuk-heading-l">{{ i18n.correspondenceLookUpAddressTitle }}</h1>
        <div class="govuk-form-group">
          {{ govukInput({
                label: {
                    text: i18n.correspondenceLookUpAddressPostCodeInput
                },
                errorMessage: {
                    text: errors.postCode.text
                } if errors.postCode | length,
                classes: "govuk-input--width-20",
                id: "postCode",
                name: "postCode",
                autocomplete: "postal-code",
                value: payload.postCode
            }) }}
          {{ govukInput({
                label: {
                    text: i18n.correspondenceLookUpAddressInputHint1
                },
                errorMessage: {
                    text: errors.premise.text
                } if errors.premise | length,
                classes: "govuk-input--width-20",
                id: "premise",
                name: "premise",
                autocomplete: "street-address",
                value: payload.premise,
                hint: {
                  text: i18n.correspondenceLookUpAddressInputHint2,
                  classes: "govuk-hint"
                }
            }) }}
        </div>
        {{ govukButton({
          text: i18n.correspondenceLookUpAddressFindAddressBtn,
          attributes: {
            "data-event-id": "FIND ADDRESS"
          }
        }) }}
        <p>
          <a href={{correspondenceAddressManualLink}} class="govuk-link" data-event-id="Enter address manually">{{ i18n.correspondenceLookUpAddressManuallyBtn }}</a>
        </p>
      </form>
    </div>
  </div>
{% endblock %}