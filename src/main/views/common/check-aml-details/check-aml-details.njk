{% from "govuk/components/table/macro.njk" import govukTable %}
{% extends "layouts/default.njk" %}
{% block main_content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-fieldset__heading">
               <label class="govuk-label govuk-label--l">Check the Anti-Money Laundering (AML) details</label>
            </h1>
            <p class="govuk-body">Weâ€™ll confirm the AML supervisory body holds the same details for MORRIS ACCOUNTING LTD. If the details do not match, we will reject your application.</p>
            <p class="govuk-body">Check the details are correct and change them if you need to.</p>

           {# Prepare table rows #}
            {% set ROWS = [] %}
            {% for body in amlSupervisoryBodies %}
                {% set row = 
                    [
                      {
                        text: body.amlSupervisoryBody
                      },
                      { 
                        text: body.membershipId
                      },
                      {
                        text: "change"
                      }
                    ]  
                %}
                {% set ROWS = ROWS.concat(row) %}
            {% endfor %}

            {{ govukTable({
              caption: "Anti-Money Laundering (AML) details",
              captionClasses: "govuk-table__caption--m",
              firstCellIsHeader: true,
              head: [
                {
                  text: "AML supervisory body"
                },
                {
                  text: "AML membership number"
                },
                {
                  text: ""
                }
              ],
              rows: ROWS
            }) }}

        </div>
    </div>
{% endblock %}