{% extends "layouts/default.njk" %}
{% block main_content %}

  <div class="govuk-width-container" style="display: flex; justify-content: flex-end; align-items: center;">

    <nav class="govuk-language-select" aria-label="Choose a language">
      <ul class="govuk-language-select__list" style="list-style-type: none; margin: 0; padding: 0; display: flex;">
        <li class="govuk-language-select__list-item" style="margin-right: 10px;">
          <span aria-current="true">English</span>
        </li>
        <li class="govuk-language-select__list-item" style="margin-right: 10px;">
          <span style="color: #1f2a36;">|</span>
        </li>
        <li class="govuk-language-select__list-item">
          <a href="#lang-cy" hreflang="cy" lang="cy" rel="alternate" class="govuk-link" data-journey-click="link - click:lang-select:Cymraeg">
            <span class="govuk-visually-hidden">Newid yr iaith ir Gymraeg</span>
            <span aria-hidden="true">Cymraeg</span>
          </a>
        </li>
      </ul>
    </nav>
  </div>

  <main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <form class="form" action="address-correspondence-confirm" method="post">

          <span class="govuk-caption-l">{{firstName}} {{lastName}}</span>

          <h1 class="govuk-heading-l">Confirm the correspondence address</h1>
          <ul class="govuk-list">
              <li>{{correspondenceAddress.propertyDetails}}</li>
              <li>{{correspondenceAddress.line1}}</li>
              <li>{{correspondenceAddress.line2}}</li>
              <li>{{correspondenceAddress.town}}</li>
              <li>{{correspondenceAddress.county}}</li>
              <li>{{correspondenceAddress.country}}</li>
              <li>{{correspondenceAddress.postcode}}</li>
          </ul>

          <p class="govuk-body">
            <a href="correspondance-address-manual" class="govuk-link govuk-link--no-visited-state">Edit address</a>
          </p>
          <button class="govuk-button" data-module="govuk-button" onclick="confirmAndContinue()">Confirm and continue</button>
        </form>
      </div>
    </div>
  </main>
</div>

{% endblock main_content %}
