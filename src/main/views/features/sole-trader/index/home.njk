{% extends "layouts/default.njk" %}

{% block backLink %}
  {# Remove back button on this page by replacing it with nothing #}
{% endblock %}

{% block main_content %}

<main class="govuk-main-wrapper" id="main-content" role="main">
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="" method="POST">

        <h1 class="govuk-heading-l">
          {{i18n.startPageTitle}}
        </h1>

        <p class="govuk-body">
          {{i18n.useThisService}}
        </p>

        <details class="govuk-details">
          <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text">
              {{i18n.whoNeedsToRegister}}
            </span>
          </summary>
          <div class="govuk-details__text">
            <p>
              {{i18n.startFromDate}}
            </p>
            <ul class="govuk-list govuk-list--bullet">
              <li>{{i18n.onBehalfClients}}</li>
              <li>{{i18n.formCompanies}}</li>
              <li>{{i18n.verifyIndentityForCH}}</li>
            </ul>
          </div>
        </details>

        <p class="govuk-body">
          {{i18n.youMustBe}}
        </p>

        <ul class="govuk-list govuk-list--bullet" role="listitem">
          <li>{{i18n.startDirector}}</li>
          <li>{{i18n.startGeneralPartner}}</li>
          <li>{{i18n.startPartner}}</li>
          <li>{{i18n.startSoleTrader}}</li>
        </ul>

        <div class="ch-info-panel" style="max-width: 630px; width: 100%; background-color: #f3f2f1; color: #000000; margin: 16px 0; padding: 2em;">
          <h2 class="govuk-heading-m">{{i18n.beforeYouStart}}</h2>
          <div class="govuk-panel__body">
            <p class="govuk-body">
              {{i18n.identifyBeforeYouCanUse}}
            </p>
            <p class="govuk-body" style="display: flex; align-items: center;">
              <img src="{{cdnHost}}/images/icon/govuk-ons-icon-arrow-circle-medium.png" alt="" height="40" width="40" style="max-width:100%; margin-top: 5px; margin-right: 0px;">       
              <strong><a class="govuk-link govuk-link--no-visited-state" href="/v7/verify-identity-prototype" style="margin-left:10px;">
                {{i18n.verifyIdentityLink}}
              </a></strong>.
            </p>
          </div>
        </div>

        <h2 class="govuk-heading-m">{{i18n.whatYoullNeedHeading}}</h2>

        <p>
          {{i18n.giveDetailsText}}
        </p>
        <ul class="govuk-list govuk-list--bullet" role="listitem">
          <li>{{i18n.startNameOfAML}}</li>
          <li>{{i18n.startAMLNumbers}}</li>
          <li>{{i18n.startPayFee}}</li>
        </ul>
        <div class="govuk-inset-text">
          {{i18n.startCheckAMLParagraph}}
        </div>

        <p>
          {{i18n.startTimeout}}
        </p>

        <button class="govuk-button govuk-button--start" data-module="govuk-button">
          {{i18n.startNow}}
          <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
            <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
          </svg>
        </button>

        <p>
          {{i18n.readThe}} <a href="guidance-ACSPs">{{i18n.guidenceLinkText}}</a>.
        </p>
      </form>
    </div>
  </div>
</main>

{% endblock %}
