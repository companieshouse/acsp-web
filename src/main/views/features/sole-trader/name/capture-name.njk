{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% set errors = pageProperties.errors %}
{% extends "layouts/default.njk" %}

{% block main_content %}

<main>
    <form action="" method="POST">
        <div class="govuk-form-group">
            <h1 class="govuk-heading-l">What is your name?</h1>
            {{ govukInput({
                label: {
                    text: "First name"
                },
                errorMessage: {
                    text: errors["first-name"].text
                } if errors["first-name"] | length,
                classes: "govuk-input--width-20",
                id: "first-name",
                name: "first-name",
                autocomplete: "given-name",
                value: payload["first-name"]
            }) }}

            {{ govukInput({
                label: {
                    text: "Middle names"
                },
                errorMessage: {
                    text: errors["middle-names"].text
                } if errors["middle-names"] | length,
                classes: "govuk-input--width-20",
                id: "middle-names",
                name: "middle-names",
                autocomplete: "additional-name",
                value: payload["middle-names"]
            }) }}

            {{ govukInput({
                label: {
                    text: "Last name"
                },
                errorMessage: {
                    text: errors["last-name"].text
                } if errors["last-name"] | length or errors["first-name"].text === "Enter your full name",
                classes: "govuk-input--width-20",
                id: "last-name",
                name: "last-name",
                autocomplete: "family-name",
                value: payload["last-name"]
            }) }}
        </div>
        {{ govukButton({
            text: "Continue"
          }) }}
    </form>
</main>

    
{% endblock main_content %}