{% extends "layouts/default.njk" %}

{% block main_content %}

<main class="govuk-main-wrapper " id="main-content" role="main">

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <!-- The action will need to change depending on the location of the confirm-company page -->
      <form action="confirm-company" method="post">
        <h1 class="govuk-heading-l">{{i18n.isThisYourCompany}}</h1>
  <dl class="govuk-summary-list">
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">{{i18n.companyName}}</dt>
      <dd class="govuk-summary-list__value">{{ companyDetails.companyName }}</dd>
    </div>
    <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">{{i18n.companyNumber}}</dt>
      <dd class="govuk-summary-list__value">{{ companyDetails.companyNumber }}</dd>
    </div>
      <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">{{i18n.status}}</dt>
      <dd class="govuk-summary-list__value">{{ companyDetails.status }}</dd>
    </div>
       <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">{{i18n.incorporationDate}}</dt>
      <dd class="govuk-summary-list__value">{{ companyDetails.incorporationDate }}</dd>
    </div>
       <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">{{i18n.companyType}}</dt>
      <dd class="govuk-summary-list__value">{{ companyDetails.companyType }}</dd>
    </div>
       <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">{{i18n.registeredOfficeAddress}}</dt>
      <dd class="govuk-summary-list__value">{{ companyDetails.registeredOfficeAddress.address_line_1 }}<br>
      {{ companyDetails.registeredOfficeAddress.address_line_2 }}<br>
      {{ companyDetails.registeredOfficeAddress.postal_code }}</dd>
    </div>
       <div class="govuk-summary-list__row">
      <dt class="govuk-summary-list__key">{{i18n.correspondaceAddress}}</dt>
      <dd class="govuk-summary-list__value">{{ companyDetails.undeliverable_registered_office_address }}</dd>
    </div>
  </dl>
  
<button class="govuk-button" data-module="govuk-button">
  {{i18n.confirm}}
</button>
         <p class="govuk-body"> <a href="company-lookup">{{i18n.chooseADifferentCompany}}</a> </p>
</main>
{% endblock main_content %}
