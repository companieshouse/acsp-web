          html: detailsAnswers.correspondenceEmail + updateStatusTextForCorrespondenceEmail,
          classes: "govuk-!-width-one-third"
        },
        actions: {
            items: [
              {
                href: "#",
                text: i18n.updateYourDetailsUpdate,
                visuallyHiddenText: i18n.updateDetailsCorrespondenceEmail
              },
              {
                href: "#",
                text: i18n.updateYourDetailsCancel,
                visuallyHiddenText: i18n.updateDetailsCorrespondenceEmail
              }if detailsAnswersUpdated.correspondenceEmail !== detailsAnswers.correspondenceEmail
