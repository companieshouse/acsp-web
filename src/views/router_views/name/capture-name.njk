{% extends "layouts/default.njk" %}

{% block main_content %}

<main>
    <form action="name" method="POST">
        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset" role="group" aria-describedby="dob-hint">
                <h1 class="govuk-heading-l">What is your name?</h1>
                
                <div class="govuk-form-group {% if errors is not undefined and errors is not null and errors | length %} govuk-form-group--error {% endif %}">
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="firstName">First name</label>
                        {% if errors.firstName is not undefined %}
                            <p id="firstNameInputError" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> {{errors.firstName.summary}}
                            </p>
                        {% endif %}
                        <input class="govuk-input govuk-input--width-20" type="text" id="firstName" name="firstName" value="{{ payload.firstName }}">
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="middleName">Middle names</label>
                        {% if errors.middleName is not undefined %}
                            <p id="middleNameInputError" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> {{errors.middleName.summary}}
                            </p>
                        {% endif %}
                        <input class="govuk-input govuk-input--width-20" type="text" id="middleName" name="middleName" value="{{ payload.middleName }}">
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-date-input__label" for="lastName">Last name</label>
                        {% if errors.lastName is not undefined %}
                            <p id="lastNameInputError" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> {{errors.lastName.summary}}
                            </p>
                        {% endif %}
                        <input class="govuk-input govuk-input--width-20" type="text" id="lastName" name="lastName" value="{{ payload.lastName }}">
                    </div>
                </div>
            </fieldset>
        </div>
        <button class="govuk-button">Continue</button>
    </form>
</main>

    
{% endblock main_content %}