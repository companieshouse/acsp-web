{% from "govuk/components/panel/macro.njk" import govukPanel %}
{% from "govuk/components/tag/macro.njk" import govukTag %}
{% extends "layouts/default.njk" %}
{% set title = i18n.yourResponsibilitiesTitle %}

{% block main_content %}
  <form method="post">
    {% if typeOfBusiness === "SOLE_TRADER" %}
      {% include "partials/user_name.njk" %}
    {% else %}
      {% include "partials/business_name.njk" %}
    {% endif %}
    
    <h1 class="govuk-heading-l">{{ i18n.yourResponsibilitiesTitle }}</h1>
    <p class="govuk-body">{{ i18n.yourResponsibilitiesText1 }}</p>
    <p class="govuk-body">{{ i18n.yourResponsibilitiesText2 }}</p>
    <ul class="govuk-list govuk-list--bullet">
      <li>{{ i18n.yourFilings }}</li>
      <li>{{ i18n.identityChecks }}</li>
    </ul>
    <p class="govuk-body">{{ i18n.yourResponsibilitiesText3 }}</p>
    
    <div class="govuk-warning-text">
      <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
      <strong class="govuk-warning-text__text">
        <span class="govuk-visually-hidden">Warning</span>
        {{ i18n.yourResponsibilitiesWarningText }}
      </strong>
    </div>
    
    <button class="govuk-button">{{ i18n.AcceptAndContinue }}</button>
  </form>
{% endblock main_content %}