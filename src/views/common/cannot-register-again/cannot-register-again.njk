{% extends "layouts/default.njk" %}
{% set title = i18n.alreadyBeenAddedToAcspHeading %}
{% block main_content %}
    <h1 class="govuk-heading-l">{{ i18n.alreadyBeenAddedToAcspHeading }}</h1>
    <p class="govuk-body">{{ i18n.emailAddressAlreadyAdded }}</p>
    <p class="govuk-body">
        {{ i18n.beforeYouApply }}
        <a id="authorised-agent-account-link-id" href="#">{{ i18n.linkAuthorisedAgentAccount }}</a>.
    </p>
    <p class="govuk-body">{{ i18n.askToRemoveYou }}</p>

    <script nonce={{ nonce | dump | safe }}>
        trackEventBasedOnPageTitle("authorised-agent-account-link-id", "{{title}}", "click-link", "authorised agent account link");
    </script>

{% endblock main_content %}