{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "layouts/default.njk" %}
{% set title = i18n.whatIsYourRoleTitle %}
{% block main_content %}
    <form action="" method="POST">
        <div class="govuk-form-group">
            {{ govukRadios({
                errorMessage: errors.WhatIsYourRole if errors,
                classes: "govuk-radios",
                id: "WhatIsYourRole",
                name: "WhatIsYourRole",
                fieldset: {
                    legend: {
                        text: i18n.whatIsYourRoleTitle,
                        isPageHeading: true,
                        classes: "govuk-fieldset__legend--l"
                    }
                },
                value: roleType,
                items: [
                    {
                      value: "MEMBER_OF_PARTNERSHIP",
                      id: "member-of-partnership",
                      text: i18n.member + unincorporatedBusinessName
                    } if acspType == "PARTNERSHIP",

                    {
                      value: "SOLE_TRADER",
                      text: i18n.soleTrader,
                      id: "sole-trader"
                    } if acspType == "SOLE_TRADER",

                    {
                      value: "MEMBER_OF_GOVERNING_BODY",
                      text: i18n.memberOfGoverningBody + unincorporatedBusinessName,
                      id: "member-of-governing-body"
                    } if acspType == "UNINCORPORATED",

                    {
                      value: "EQUIVALENT_OF_DIRECTOR",
                      text: i18n.equivalentToDirector + unincorporatedBusinessName,
                      id: "director-equivalent"
                    } if acspType == "CORPORATE_BODY",

                    {
                      value: "MEMBER_OF_ENTITY",
                      text: i18n.member + unincorporatedBusinessName,
                      id: "member-of-entity"
                    } if acspType == "UNINCORPORATED" or acspType == "CORPORATE_BODY",

                    {
                      value: "DIRECTOR",
                      text: i18n.director + company.companyName + " (" + company.companyNumber + ")",
                      id: "I-am-director"
                    } if acspType == "LC",

                    {
                      value: "MEMBER_OF_LLP",
                      text: i18n.member + company.companyName + " (" + company.companyNumber + ")",
                      id: "member-of-llp"
                    } if acspType == "LLP",

                    {
                      value: "GENERAL_PARTNER",
                      text: i18n.generalPartner + unincorporatedBusinessName,
                      id: "general-partner"
                    } if acspType == "LP",

                    {
                      value: "SOMEONE_ELSE",
                      text: i18n.someoneElse,
                      id: "someone-else"
                    }
                ]
            }) }}
        </div>
        {{ govukButton({
          text: i18n.SaveAndContinue,
          id:"save-continue-button",
          attributes: {
            "onClick": "analyticsWithCustomisedMatomoText();"
          }
        }) }}
    </form>

    <script> 
      var textOnRadioSelection;
      function analyticsWithCustomisedMatomoText(){
          if ($("input[type='radio']:checked").length > 0) {
            switch($("form").find("input[type='radio']:checked").val()) {
              case "MEMBER_OF_PARTNERSHIP":
                textOnRadioSelection = "I am a member of partnership";
                break;
              case "SOLE_TRADER":
                textOnRadioSelection = "I am the sole trader";
                break;
              case "MEMBER_OF_GOVERNING_BODY":
                textOnRadioSelection = "I am a member of entity";
                break;
              case "EQUIVALENT_OF_DIRECTOR":
                textOnRadioSelection = "I am the equivalent of a director of";
                break;
              case "MEMBER_OF_ENTITY":
                textOnRadioSelection = "I am a member of entity";
                break;
              case "DIRECTOR":
                textOnRadioSelection = "I am a director of";
                break;
              case "MEMBER_OF_LLP":
                textOnRadioSelection = "I am a member of llp";
                break;
              case "GENERAL_PARTNER":
                textOnRadioSelection = "I am a general partner of";
                break;
              case "SOMEONE_ELSE":
                textOnRadioSelection = "I am someone else";
                break;
            }
            alert("textOnRadioSelection1: "+textOnRadioSelection);
            //_paq.push(["trackEvent", eventCategory, textOnRadioSelection]);
          }
      }
    </script>

{% endblock main_content %}
