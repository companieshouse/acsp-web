{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "layouts/default.njk" %}
{% set title = i18n.whichSectorOtherTitle %}
{% block main_content %}
    <form action="" method="POST">
        {% if acspType == "SOLE_TRADER" %}
           {% include "partials/user_name.njk" %}
        {% endif %}
        <div class="govuk-form-group">
            {{ govukRadios({
                errorMessage: errors.whichSectorOther if errors,
                classes: "govuk-radios",
                id: "which-sector-other-radios",
                name: "whichSectorOther",
                fieldset: {
                    legend: {
                        text: i18n.whichSectorOtherTitle,
                        isPageHeading: true,
                        classes: "govuk-fieldset__legend--l"
                    }
                },
                value: workSector,
                items: [
                    {
                        value: "EA",
                        text: i18n.whichSectorOtherEstateAgentsOption,
                        attributes: {
                            "data-event-id": "estate-agents-option"
                        }
                    },
                    {
                        value: "HVD",
                        text: i18n.whichSectorOtherHighValueDealersOption,
                        attributes: {
                            "data-event-id": "high-value-dealers-option"
                        }
                    },
                    {
                        value: "CASINOS",
                        text: i18n.whichSectorOtherCasinosOption,
                        attributes: {
                            "data-event-id": "casinos-option"
                        }
                    }
                ]
                }) }}
        </div>
        <div class="govuk-button-group"> 
            {{ govukButton({
                text: i18n.SaveAndContinue,
                attributes: {
                  "data-event-id": "SAVE AND CONTINUE - OTHER SECTOR " + acspType
                }
              }) }}
            <a href={{ whichSectorLink }} class="govuk-link" data-event-id="Back to main business sector list">{{ i18n.whichSectorOtherGoBack }}</a>
        </div>
    </form>
{% endblock main_content %}