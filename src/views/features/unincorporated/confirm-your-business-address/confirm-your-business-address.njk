{% from "govuk/components/button/macro.njk" import govukButton %}
{% extends "layouts/default.njk" %}

{% set title = i18n.businessAddressConfirmTitle %}
{% block main_content %}
  <form action="" method="post">
    {% include "partials/business_name.njk" %}
    <h1 class="govuk-heading-l">{{ i18n.businessAddressConfirmTitle }}</h1>
    <ul class="govuk-list">
      <li>{{ businessAddress.propertyDetails }}</li>
      <li>{{ businessAddress.line1 }}</li>
      <li>{{ businessAddress.line2 }}</li>
      <li>{{ businessAddress.town }}</li>
      <li>{{ businessAddress.county }}</li>
      <li>{{ businessAddress.country }}</li>
      <li>{{ businessAddress.postcode }}</li>
    </ul>
    <p class="govuk-body">
      <a href={{editAddress}} class="govuk-link govuk-link--no-visited-state data-event-id="Edit address"">{{ i18n.EditAddress }}</a>
    </p>
    <div class="govuk-inset-text">
      <h2 class="govuk-heading-m">{{ i18n.infoShowOnPublic }}</h2>
      <p>{{ i18n.businessLocationInfo }}</p>
    </div>
    {{ govukButton({
      text: i18n.ConfirmAndContinue,
      attributes: {
        "data-event-id": "CONFIRM AND CONTINUE - address business confirm"
      }
    }) }}
  </form>
{% endblock main_content %}